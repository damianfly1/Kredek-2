@* View that displays information about freshly created order *@

@model DamianMuchaDom2.Models.Order

@{
    ViewData["Title"] = "Your order";
}

<h1>Your order</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Book
        </dt>
        <dd class="col-sm-10">
            @ViewBag.orderedBook.Title
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
           @Model.Amount
        </dd>
        <dt class="col-sm-2">
            Total price
        </dt>
        <dd class="col-sm-10">
            @( (@Model.Amount * ViewBag.orderedBook.Price).ToString("N2") ) zł
        </dd>
        <dt class="col-sm-2">
            First name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
           City
        </dt>
        <dd class="col-sm-10">
           @Model.City
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            Phone number
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            Email address
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Order date
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate
        </dd>

    </dl>
    <a asp-action="AllBooks">Go back to browsing books</a>
</div>
